# ChatOps Terraform Manager Configuration
# Copy this file to terraform.tfvars and fill in your values

# Core Configuration
name_prefix        = "chatops"
aws_region         = "eu-north-1"
github_owner       = "your-github-username"
github_repo        = "your-repo-name"
github_branch      = "main"
authorized_chat_id = "123456789"

# Secrets (NEVER commit the actual terraform.tfvars file!)
github_token       = "ghp_your_github_token_here"
telegram_bot_token = "1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"

# AWS Resources
s3_bucket_arn = "arn:aws:s3:::your-terraform-state-bucket"

# Lambda Configuration (All 3 Lambdas are required)
webhook_lambda_zip_path      = "../lambda/webhook-handler/lambda_function.zip"
telegram_lambda_zip_path     = "../lambda/telegram-bot/telegram-bot.zip"
ai_processor_lambda_zip_path = "../lambda/ai-output-processor/output_processor.zip"

# AI Processing via AWS Bedrock (Lambda always exists, this enables Bedrock integration)
enable_ai_processing = true
ai_model_id          = "anthropic.claude-3-haiku-20240307-v1:0"
ai_threshold         = 1000
ai_max_tokens        = 1000

# Other Configuration
max_message_length   = 3500
log_retention_days   = 7

# Tags
tags = {
  Project     = "ChatOps"
  Environment = "dev"
  ManagedBy   = "Terraform"
}
